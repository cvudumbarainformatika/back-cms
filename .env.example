# ============================================================================
# Go Gin Backend Starter Kit - Environment Configuration
# ============================================================================
# Copy this file to .env and update values for your environment
# Do NOT commit .env file to git (it contains sensitive data)
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_NAME=Go Gin Backend
APP_ENV=local
APP_PORT=8080

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Supported: mysql, postgres
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=go_backend_db
DB_USERNAME=root
DB_PASSWORD=secret

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15
JWT_REFRESH_TOKEN_EXPIRATION=10080

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# STORAGE CONFIGURATION - SCALABLE FILE UPLOAD SYSTEM
# ============================================================================
# Base storage path
STORAGE_BASE_PATH=./storage

# Avatar storage path
AVATAR_STORAGE_PATH=./storage/avatars
AVATAR_UPLOAD_ENABLED=true
AVATAR_MAX_SIZE=5242880

# Thumbnail storage path (untuk berita, galeri, dll)
STORAGE_THUMBNAILS_PATH=./storage/thumbnails
THUMBNAIL_UPLOAD_ENABLED=true
THUMBNAIL_MAX_SIZE=10485760

# Berita/news storage path
STORAGE_BERITA_PATH=./storage/berita
BERITA_UPLOAD_ENABLED=true
BERITA_MAX_SIZE=20971520

# Dokumen storage path
STORAGE_DOKUMEN_PATH=./storage/dokumen
DOKUMEN_UPLOAD_ENABLED=true
DOKUMEN_MAX_SIZE=52428800

# Galeri storage path
STORAGE_GALERI_PATH=./storage/galeri
GALERI_UPLOAD_ENABLED=true
GALERI_MAX_SIZE=26214400

# Attachment storage path
STORAGE_ATTACHMENT_PATH=./storage/attachments
ATTACHMENT_UPLOAD_ENABLED=true
ATTACHMENT_MAX_SIZE=104857600

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Uncomment and update for production deployment:
#
# APP_ENV=production
# APP_PORT=8080
# DB_HOST=your-production-db-host
# DB_DATABASE=production_database
# DB_USERNAME=prod_user
# DB_PASSWORD=strong-password-here
# JWT_SECRET=generate-with-openssl-rand-base64-32
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# RATE_LIMIT_MAX_REQUESTS=1000
# RATE_LIMIT_WINDOW_SECONDS=3600
